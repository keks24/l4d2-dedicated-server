#!/bin/bash
source "/usr/local/lib/functions.sh"

createAndRemoveLockFile

# define global variables
steamcmd_script_file="/home/steam/.local/usr/share/steam/l4d2/update_l4d2_ds.txt"
log_directory_path="/var/log/steam/steamcmd"
log_filename="steamcmd.log"
log_file="${log_directory_path}/${log_filename}"
game_name="Left 4 Dead 2 Dedicated Server"

if [[ "${1}" == "--cronjob" ]]
then
    /usr/games/steamcmd +runscript "${steamcmd_script_file}" >> "${log_file}"
    exit
fi

clear
echoC "" "bold" "red" "This updates '${game_name}'. Once started, the process cannot be aborted via 'CTRL+C'! Start update? (Y/n)"
read decision

case "${decision}" in
    ""|"y"|"Y")
        # trap sigint
        trap "" INT

        /usr/games/steamcmd +runscript "${steamcmd_script_file}" >> "${log_file}"
        ;;

    "n"|"N")
        outputErrorAndExit "error" "Aborted." "1"
        ;;

    *)
        outputErrorAndExit "error" "Entered string '${decision}' is invalid. Must be one of the following: '<enter>', 'y', 'Y', 'n' or 'N'." "1"
esac
